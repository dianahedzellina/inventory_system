/* ===== FETCH LOGS ===== */
$logs = mysqli_query($conn, "
    SELECT 
        a.log_id,
        u.username,
        a.action,
        a.created_at
    FROM activity_logs a
    JOIN users u ON a.user_id = u.user_id
    ORDER BY a.created_at DESC
");
?>

